<footer class="footer | region wrapper | stack">
  <nav class="footer__meta | cluster text-step-0" aria-label="{{ meta.navigation.ariaBottom }}">
    &copy; {% year %}
    <a href="/" {% if page.url == "/" %}aria-current="page"{% endif %}>{{ meta.siteName }} - {{ pkg.version }}</a>

    {% for item in navigation.bottom %}
      <a href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }} >{{ item.text }}</a>
    {% endfor %}
  </nav>

